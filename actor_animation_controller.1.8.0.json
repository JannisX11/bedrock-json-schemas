{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://json.cp3.es/minecraft/bedrock/actor_animation_controller.1.8.0.json",
    "title": "Animation Controller",
    "description": "An animation controller.",
    "type": "object",
    "properties": {
        "format_version": {
            "type": "string",
            "const": "1.8.0"
        },
        "animation_controllers": {
            "type": "object",
            "propertyNames": {
                "pattern": "^controller\\.animation\\.[A-z0-9._-]+$"
            },
            "additionalProperties": {
                "type": "object",
                "properties": {
                    "states": {
                        "type": "object",
                        "propertyNames": {
                            "pattern": "^[A-z0-9._-]+$"
                        },
                        "additionalProperties": {
                            "type": "object",
                            "properties": {
                                "parameters": {
                                    "type": "array",
                                    "items": {
                                        "type": "string"
                                    }
                                },
                                "animations": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "additionalProperties": {
                                            "type": "array",
                                            "minItems": 0,
                                            "items": {
                                                "type": "object",
                                                "propertyNames": {
                                                    "pattern": "(\\.)?"
                                                },
                                                "additionalProperties": {
                                                    "type": "number"
                                                }
                                            }
                                        }
                                    }
                                },
                                "transitions": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "additionalProperties": {
                                            "$ref": "meta.json#/definitions/molang"
                                        }
                                    }
                                },
                                "particle_effects": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "meta.json#/definitions/particle_effect"
                                    }
                                },
                                "on_entry": {
                                    "type": "array",
                                    "items": {
                                        "type": "string"
                                    }
                                },
                                "on_exit": {
                                    "type": "array",
                                    "items": {
                                        "type": "string"
                                    }
                                }
                            },
                            "additionalProperties": false
                        }
                    },
                    "initial_state": {
                        "type": "string"
                    }
                },
                "required": [
                    "states"
                ],
                "additionalProperties": false
            }
        }
    },
    "required": [
        "format_version",
        "animation_controllers"
    ],
    "additionalProperties": false
}