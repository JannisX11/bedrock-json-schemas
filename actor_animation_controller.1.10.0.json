{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://json.cp3.es/minecraft/bedrock/actor_animation_controller.1.10.0.json",
    "title": "Animation Controller",
    "description": "An animation controller.",
    "type": "object",
    "properties": {
        "format_version": {
            "type": "string",
            "const": "1.10.0"
        },
        "animation_controllers": {
            "type": "object",
            "propertyNames": {
                "pattern": "^controller\\.animation\\.[A-z0-9._-]+$"
            },
            "additionalProperties": {
                "type": "object",
                "properties": {
                    "states": {
                        "type": "object",
                        "propertyNames": {
                            "pattern": "^[A-z0-9._-]+$"
                        },
                        "additionalProperties": {
                            "type": "object",
                            "properties": {
                                "variables": {
                                    "type": "object",
                                    "propertyNames": {
                                        "pattern": "^[A-z0-9._-]+$"
                                    },
                                    "additionalProperties": {
                                        "type": "object",
                                        "properties": {
                                            "input": {
                                                "type": "string",
                                                "format": "molang"
                                            },
                                            "remap_curve": {
                                                "type": "object",
                                                "propertyNames": {
                                                    "pattern": "(\\.)?"
                                                },
                                                "additionalProperties": {
                                                    "type": "number"
                                                }
                                            }
                                        },
                                        "required": [
                                            "input"
                                        ],
                                        "additionalProperties": false
                                    }
                                },
                                "animations": {
                                    "type": "array",
                                    "items": {
                                        "anyOf": [
                                            {
                                                "type": "string"
                                            },
                                            {
                                                "type": "object",
                                                "propertyNames": {
                                                    "pattern": "^[A-z0-9._-]+$"
                                                },
                                                "additionalProperties": {
                                                    "type": "string",
                                                    "format": "molang"
                                                }
                                            }
                                        ]
                                    }
                                },
                                "transitions": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "propertyNames": {
                                            "pattern": "^[A-z0-9._-]+$"
                                        },
                                        "additionalProperties": {
                                            "type": "string"
                                        }
                                    }
                                },
                                "blend_via_shortest_path": {
                                    "description": "When blending a transition to another state, animate each euler axis through the shortest rotation, instead of by value",
                                    "type": "boolean"
                                },
                                "blend_transition": {
                                    "oneOf": [
                                        {
                                            "description": "Specifies the cross-fade time in seconds when transitioning to another state",
                                            "type": "object",
                                            "additionalProperties": {
                                                "description": "Mapping of time since the animation was canceled, to the blend value at that time.  A default key of time=0 to a blend value of 1.0 is provided if any other key is set and a blend value at time=0 hasn't already been set.",
                                                "type": "number"
                                            }
                                        },
                                        {
                                            "description": "A short-hand version of blend_out that simply sets the amount of time to fade out if the animation is interrupted",
                                            "type": "number"
                                        }
                                    ]
                                },
                                "particle_effects": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "meta.json#/definitions/particle_effect"
                                    }
                                },
                                "on_entry": {
                                    "type": "array",
                                    "items": {
                                        "type": "string"
                                    }
                                },
                                "on_exit": {
                                    "type": "array",
                                    "items": {
                                        "type": "string"
                                    }
                                },
                                "sound_effects": {
                                    "description": "Collection of sounds to trigger on entry to this animation state.",
                                    "type": "array",
                                    "items": {
                                        "$ref": "meta.json#/definitions/sound_effect"
                                    }
                                }
                            },
                            "additionalProperties": false
                        }
                    },
                    "initial_state": {
                        "type": "string"
                    }
                },
                "required": [
                    "states"
                ],
                "additionalProperties": false
            }
        }
    },
    "required": [
        "format_version",
        "animation_controllers"
    ],
    "additionalProperties": false
}